.sections
    display flex
    flex-direction column
    align-items center
    justify-content flex-end
    width 100%
    height 11.4rem
    .sections__items
        display flex
        list-style none
        li:nth-child(2)
            margin 0 2rem 0 2rem 
    .link
        font-size textFontSize - 0.2rem
        font-family fuente-principal
        color color5
        text-decoration none 
    .isPhotography,.isFilmmaking,.isIlustration
        text-decoration underline
        color color3
    .sections__title
        margin-top 1.3rem
        text-transform uppercase
        font-size 2.5rem
        font-family fuente-principal
        font-weight 900
        color color7
        opacity 0.2



