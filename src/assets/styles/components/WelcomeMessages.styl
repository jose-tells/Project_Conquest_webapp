.header
    display flex
    justify-content center
    width 100%
    height 13rem
    .header__slider
        width 100%
        display flex
        align-items center
        overflow hidden
    .header__slider--message
        min-width 98%
        font-family fuente-principal
        font-weight 500
        text-align right
        font-size textFontSize
        color color6
        transition 3s 
    .slider__icons
        display grid
        grid-template-columns repeat(10, 1fr) 
        grid-template-rows repeat(10, 1fr) 
        width 15%
        color color6
        overflow hidden
        .slider__icons--arrow
            align-self center
            grid-column 3/6
            grid-row 4/5
            transform scale(1.6)


