@import "../Vars.styl"

.profileDescription__description--container
  margin-right 2rem
  display flex
  flex-direction column
  align-self flex-end
  align-items flex-end
  grid-column 2/6
  grid-row 6/9
  gap 1rem

.profileDescription__title
  margin-bottom 0.5rem
  text-align right
  text-transform uppercase
  font-size 4rem
  font-weight 900
  color color1

.profileDescription__title--underline
  width 100%
  height 0.05rem
  background-color color8

.profileDescription__description
  width 30rem
  text-align right
  font-size textFontSize - 0.2rem
  font-weight 400
  line-height 170%
  color color8