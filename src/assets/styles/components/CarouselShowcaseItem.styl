
.sliderReel__showcaseImage--container
  min-width 7.8rem
  height 5.5rem
  transition 0.2s ease all

.sliderReel__showcaseImage--container>img
  width 100%
  height 100%
  object-fit cover
  filter grayscale(1)

.sliderReel__showcaseImage--container.selected
  min-width 10rem
  height 100%

.sliderReel__showcaseImage--container.selected>img
  filter grayscale(0)

