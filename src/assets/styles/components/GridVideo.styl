.Filmmaking-body
  background-color color4

.gridVideo
  width 90%
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-template-rows repeat(auto, 7fr)
  row-gap 2rem
  margin 2rem auto

.video__container.left
  grid-column 1/5
  z-index 0
  .video__item
    width 100%

.video__container.right
  grid-column 2/6
  z-index 0
  .video__item
    width 100%

.description.left
  align-self center
  text-align right
  z-index 10
  transform translate(4rem, -3rem)
  videoDescription()
  .description--title
    text-transform: uppercase
    titleVideoDescription()
  .description--caption
    captionVideoDescription()
  .description--author
    authorVideoDescription()

.description.right
  align-self center
  text-align left
  z-index 10
  transform translate(-4rem, -3rem)
  videoDescription()
  .description--title
    text-transform: uppercase
    titleVideoDescription()
  .description--caption
    captionVideoDescription()
  .description--author
    authorVideoDescription()
