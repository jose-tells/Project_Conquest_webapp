.Filmmaking-body
    background-color color4

.gridVideo
    width 90%
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-template-rows repeat(6, 7fr)
    row-gap 2rem
    margin 2rem auto 0 auto 

.video1
    grid-column 1/4
    grid-row 1/3
    overflow hidden
    z-index 0
    video 
        width 100%
        // transform: translateY(20%)

.description 
    grid-column 2/5
    grid-row 1/3
    align-self center
    text-align right
    z-index 10
    transform translateX(20%)
    videoDescription()
    .description--title
        titleVideoDescription()
    .description--caption
        captionVideoDescription()
    .description--author
        authorVideoDescription()

