
@import "../Vars.styl"

.sliderReel__showcase--container
  display flex
  width 90%
  height 10rem
  overflow hidden
  margin 4rem auto

.sliderReel__showcase
  width 100%
  height 7rem
  display flex
  justify-content flex-start
  align-items center
  flex-wrap nowrap
  gap 2px
  background color8
  transition 0.5s ease all

.sliderReel__showcaseImage--container
  min-width 7.8rem
  height 5.5rem
  transition 0.2s ease all

.sliderReel__showcaseImage--container>img
  width 100%
  height 100%
  object-fit cover
  filter grayscale(1)

.sliderReel__showcaseImage--container.selected
  min-width 10rem
  height 100%

.sliderReel__showcaseImage--container.selected>img
  filter grayscale(0)

