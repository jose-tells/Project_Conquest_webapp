.gridAbout__item:nth-child(1)
    grid-column 1/4
    transition all 0.5s
    aboutGrid()
    .gridAbout__item--image
        background-image url("/src/assets/static/img/Agustin-Blog.jpg")
        background-position center
        background-repeat no-repeat
        background-size cover
        aboutImage()
    .gridAbout__item--specialty
        justify-self flex-start
        align-self center
        grid-column 1/2
        grid-row 1/2
        transform rotate(-90deg) translateY(-0.5rem)
        specialtyStyle()

