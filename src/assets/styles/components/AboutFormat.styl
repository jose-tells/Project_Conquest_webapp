@import "../Vars.styl";
@import "../Mixins.styl";

.gridAbout__item--container
  position relative
  width 33.33333%
  height 100vh
  display grid
  justify-content flex-end
  grid-template-columns repeat(5, 1fr)
  grid-template-rows repeat(2, 1fr)
  text-decoration none
  overflow hidden

.gridAbout__image--container
  position absolute
  width 100%
  height 100vh

.gridAbout__image
  height 100%
  object-fit cover
  z-index 0

.gridAbout__item--container:nth-child(1) .gridAbout__image
  transform translateX(-25%)

.gridAbout__item--container:nth-child(2) .gridAbout__image
  transform translateX(-50%)

.gridAbout__item--container:nth-child(3) .gridAbout__image
  transform translateX(-40%)


// Grid items

.gridAbout__specialty--container
  min-width 100%
  display flex
  grid-column 1/6
  grid-row 2/3
  align-self flex-end
  justify-self flex-start

.gridAbout__specialty
  text-transform uppercase
  color color8
  font-size titlesFontSize + .2rem
  z-index 10
  transform-origin top left
  transform rotate(-90deg) translateX(-1rem)


.gridAbout__specialty--container.right
  display flex
  flex-direction column
  grid-column 1/6
  grid-row 1/2
  align-self flex-start
  justify-self flex-end
  color color4

.gridAbout__specialty--container.right .gridAbout__specialty
  align-self flex-end
  transform-origin bottom right
  transform rotate(-90deg) translateX(1rem)
