.gridAbout
    width 100%
    display grid
    grid-template-columns repeat(9, 1fr)
    grid-template-rows repeat(10, 1fr)
    overflow hidden

.gridAbout__title
    aboutTitle()

.gridAbout__animation:nth-child(5)
    width 80%
    grid-column 1/6
    grid-row 10/11
    border-bottom 1px solid color8
    // transform translateX(2.2rem)
    aboutAnimation()

.gridAbout__animation:nth-child(6)
    height 90.2%
    grid-column 4/7
    border-left 1px solid color8
    grid-row 1/11
    // transform translateY(-2rem)
    aboutAnimation()

.gridAbout__animation:nth-child(7)
    width 80%
    grid-column 5/10
    grid-row 1/2
    border-bottom 1px solid color8
    // transform translateX(2.2rem)
    aboutAnimation()