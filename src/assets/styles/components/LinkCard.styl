@import "../Vars.styl"

.linkCard__container
  width 90%
  display flex
  margin auto
  flex-direction column
  justify-content center
  align-items flex-start

.linkCard__image--container
  position relative
  width 100%
  height 23.8rem
  margin-bottom 1rem
  display flex
  flex-direction column
  justify-content center
  align-items center

.linkCard__image
  width 100%
  height inherit
  background-color black
  opacity 0.2
  z-index 0

.linkCard__title
  position absolute
  width fit-content
  font-size titlesFontSize + 0.2rem
  font-weight 400
  text-decoration underline
  letter-spacing 0.5rem
  text-align center
  text-transform uppercase
  color color8
  z-index 10