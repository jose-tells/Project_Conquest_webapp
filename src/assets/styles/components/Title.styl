@import "../Vars.styl"

.title__container
  width 100%
  align-self flex-start
  justify-self flex-end
  display flex
  align-items center
  flex-direction column
  grid-column 1/6
  grid-row 7/10

.title__text
  align-self flex-end
  margin-right 2rem
  color color9
  text-align right
  font-style normal
  font-weight 300
  font-size 4rem

.text__slideshow
  display inline-block
  min-width 100%
  text-transform uppercase
  text-align right
  font-weight 500
  font-size titlesFontSize + 1.2rem
  color color9
  transition 2000ms ease all

.title__slideshow--container
  align-self flex-end
  display flex
  flex-wrap nowrap
  min-width 100%
  overflow hidden
